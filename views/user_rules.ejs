        function showUpdate(id, rule) {
            let r = $('#update_rule textarea[name=rule]');
            $('#update_Modal').modal('show');
            r.val(rule);
            //$('#u_ruleSubmit').attr("href", '/ruleDel/' + id)
            $('#update_rule').submit(() => {
                if (r.val() == 0) {
                    $("#update_rule #err_rule").html("Enter Rule");
                    $("#update_rule #rule").focus();
                    return false
                } else {
                    document.getElementById('update_rule').action = '/ruleUpdate/' + id
