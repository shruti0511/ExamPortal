        });

        function showUpdate(id, que, opt1, opt2, opt3, opt4, answer, language) {
            //alert(answer)
            //alert(id + que + opt1 + opt2 + opt3 + opt4 + language + answer)
            $('#updateModal').modal('show');
            var ques1 = $("#update_quiz input[name=question]");
            var quizU1 = $("#update_quiz input[name=opt1]");
            var quizU2 = $("#update_quiz input[name=opt2]");
            var quizU3 = $("#update_quiz input[name=opt3]");
            var quizU4 = $("#update_quiz input[name=opt4]");
            $("#updateModal #exam option[value='" + language + "']").prop('selected', true);
            $("#updateModal #answer option[value=" + answer + "]").prop('selected', true);
            ques1.val(que);
            quizU1.val(opt1);
            quizU2.val(opt2);
            quizU3.val(opt3);
            quizU4.val(opt4);

            $('#update_quiz').submit(() => {
                $("#update_quiz #err_exam").html("")
                $("#update_quiz #err_que").html("")
                $("#update_quiz #err_opt1").html("")
                $("#update_quiz #err_opt2").html("")
                $("#update_quiz #err_opt3").html("")
                $("#update_quiz #err_opt4").html("")
                $("#update_quiz #err_answer").html("")
                    // $("update_quiz #err_opt4").html("");
                if ($("#updateModal #exam").val() == "") {
                    $("#update_quiz #err_exam").html("Select subject");
                    $("#update_quiz #err_exam").focus();
                    return false;
                } else if (ques1.val() == 0) {
                    $("#update_quiz #err_que").html("Question can't be blank");
                    $("#update_quiz #que").focus();
                    return false;
                } else if (ques1.val().length >= 100) {
                    $("#update_quiz #err_que").html("Question can't be greater than 100");
                    $("#update_quiz #que").focus();
                    return false;
                } else if (quizU1.val() == 0) {
                    $("#update_quiz #err_opt1").html("Option 1 can't be blank");
                    $("#update_quiz #opt1").focus();
                    return false;
                } else if (quizU1.val().length >= 100) {
                    $("#update_quiz #err_opt1").html("Option can't be greater than 100");
                    $("#update_quiz #opt1").focus();
                    return false;
                } else if (quizU2.val() == 0) {
                    $("#update_quiz #err_opt2").html("Option 2 can't be blank");
                    $("#update_quiz #opt2").focus();
                    return false;
                } else if (quizU2.val().length >= 100) {
                    $("#update_quiz #err_opt2").html("Option can't be greater than 100");
                    $("#update_quiz #opt2").focus();
                    return false;
                } else if (quizU3.val() == 0) {
                    $("#update_quiz #err_opt3").html("Option 3 can't be blank");
                    $("#update_quiz #opt3").focus();
                    return false;
                } else if (quizU3.val().length >= 100) {
                    $("#update_quiz #err_opt3").html("Option can't be greater than 100");
                    $("#update_quiz #opt3").focus();
                    return false;
                } else if (quizU4.val() == 0) {
                    $("#update_quiz #err_opt4").html("Option 4 can't be blank");
                    $("#update_quiz #opt3").focus();
                    return false;
                } else if (quizU4.val().length >= 100) {
                    $("#update_quiz #err_opt4").html("Option can't be greater than 100");
                    $("#update_quiz #opt4").focus();
                    return false;
                } else if ($("#updateModal #answer").val() == "") {
                    $("#update_quiz #err_answer").html("Select Answer");
                    $("#update_quiz #err_answer").focus();
                    return false;

                } else {
                    document.getElementById('update_quiz').action = '/quizUpdate/' + id
                    return true;
                }
            })
            document.getElementById('update_quiz').action = '/quizUpdate/' + id
        }
